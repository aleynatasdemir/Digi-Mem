@page
@model SummariesModel
@{
    ViewData["Title"] = "Özetler";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-foreground mb-2">Özetler</h1>
        <p class="text-muted-foreground">Anılarınızın istatistiklerini ve dağılımını görüntüleyin</p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
        <div class="rounded-lg border border-border bg-card p-6">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-muted-foreground">Toplam Anı</span>
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                </svg>
            </div>
            <p id="totalMemories" class="text-3xl font-bold text-foreground">0</p>
        </div>

        <div class="rounded-lg border border-border bg-card p-6">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-muted-foreground">Bu Ay</span>
                <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
            <p id="thisMonth" class="text-3xl font-bold text-foreground">0</p>
        </div>

        <div class="rounded-lg border border-border bg-card p-6">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-muted-foreground">Bu Hafta</span>
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
            </div>
            <p id="thisWeek" class="text-3xl font-bold text-foreground">0</p>
        </div>

        <div class="rounded-lg border border-border bg-card p-6">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-muted-foreground">Bugün</span>
                <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <p id="today" class="text-3xl font-bold text-foreground">0</p>
        </div>
    </div>

    <!-- Type Distribution -->
    <div class="rounded-lg border border-border bg-card p-6 mb-8">
        <h2 class="text-lg font-semibold text-foreground mb-4">Anı Tipi Dağılımı</h2>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
            <div class="text-center">
                <div class="w-16 h-16 rounded-full bg-blue-500/10 text-blue-500 mx-auto mb-2 flex items-center justify-center">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                    </svg>
                </div>
                <p class="text-2xl font-bold text-foreground" id="photoCount">0</p>
                <p class="text-sm text-muted-foreground">Fotoğraf</p>
            </div>

            <div class="text-center">
                <div class="w-16 h-16 rounded-full bg-purple-500/10 text-purple-500 mx-auto mb-2 flex items-center justify-center">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <p class="text-2xl font-bold text-foreground" id="videoCount">0</p>
                <p class="text-sm text-muted-foreground">Video</p>
            </div>

            <div class="text-center">
                <div class="w-16 h-16 rounded-full bg-orange-500/10 text-orange-500 mx-auto mb-2 flex items-center justify-center">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
                    </svg>
                </div>
                <p class="text-2xl font-bold text-foreground" id="voiceCount">0</p>
                <p class="text-sm text-muted-foreground">Ses Kaydı</p>
            </div>

            <div class="text-center">
                <div class="w-16 h-16 rounded-full bg-green-500/10 text-green-500 mx-auto mb-2 flex items-center justify-center">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <p class="text-2xl font-bold text-foreground" id="textCount">0</p>
                <p class="text-sm text-muted-foreground">Metin Notu</p>
            </div>

            <div class="text-center">
                <div class="w-16 h-16 rounded-full bg-pink-500/10 text-pink-500 mx-auto mb-2 flex items-center justify-center">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                    </svg>
                </div>
                <p class="text-2xl font-bold text-foreground" id="songCount">0</p>
                <p class="text-sm text-muted-foreground">Şarkı</p>
            </div>
        </div>
    </div>

    <!-- Activity Heatmap -->
    <div class="rounded-lg border border-border bg-card p-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-foreground">Aktivite Haritası</h2>
            <select id="yearSelect" onchange="loadHeatmap()" class="px-3 py-1 text-sm bg-background border border-input rounded-lg text-foreground">
                <option value="2025">2025</option>
                <option value="2024">2024</option>
                <option value="2023">2023</option>
            </select>
        </div>
        
        <div class="overflow-x-auto">
            <div id="heatmap" class="inline-block min-w-full">
                <!-- Heatmap will be rendered here -->
            </div>
        </div>

        <div class="flex items-center justify-end gap-2 mt-4">
            <span class="text-xs text-muted-foreground">Az</span>
            <div class="flex gap-1">
                <div class="w-3 h-3 rounded-sm bg-muted"></div>
                <div class="w-3 h-3 rounded-sm bg-primary/20"></div>
                <div class="w-3 h-3 rounded-sm bg-primary/40"></div>
                <div class="w-3 h-3 rounded-sm bg-primary/60"></div>
                <div class="w-3 h-3 rounded-sm bg-primary/80"></div>
                <div class="w-3 h-3 rounded-sm bg-primary"></div>
            </div>
            <span class="text-xs text-muted-foreground">Çok</span>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let allMemories = [];

    async function loadStats() {
        try {
            const response = await fetch(`@Model.ApiBaseUrl/memories?pageSize=1000`);
            const data = await response.json();
            allMemories = data.items || [];

            calculateStats();
            loadHeatmap();
        } catch (error) {
            console.error('Error loading stats:', error);
            toast.error('İstatistikler yüklenirken bir hata oluştu');
        }
    }

    function calculateStats() {
        const now = new Date();
        const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
        const weekStart = new Date(today);
        weekStart.setDate(today.getDate() - today.getDay());
        const monthStart = new Date(now.getFullYear(), now.getMonth(), 1);

        let todayCount = 0;
        let weekCount = 0;
        let monthCount = 0;
        const typeCounts = { photo: 0, video: 0, voice: 0, text: 0, song: 0 };

        allMemories.forEach(memory => {
            const memoryDate = new Date(memory.createdAt);
            
            if (memoryDate >= today) todayCount++;
            if (memoryDate >= weekStart) weekCount++;
            if (memoryDate >= monthStart) monthCount++;
            
            if (typeCounts.hasOwnProperty(memory.type)) {
                typeCounts[memory.type]++;
            }
        });

        document.getElementById('totalMemories').textContent = allMemories.length;
        document.getElementById('today').textContent = todayCount;
        document.getElementById('thisWeek').textContent = weekCount;
        document.getElementById('thisMonth').textContent = monthCount;

        document.getElementById('photoCount').textContent = typeCounts.photo;
        document.getElementById('videoCount').textContent = typeCounts.video;
        document.getElementById('voiceCount').textContent = typeCounts.voice;
        document.getElementById('textCount').textContent = typeCounts.text;
        document.getElementById('songCount').textContent = typeCounts.song;
    }

    function loadHeatmap() {
        const year = parseInt(document.getElementById('yearSelect').value);
        const heatmapData = generateHeatmapData(year);
        renderHeatmap(heatmapData, year);
    }

    function generateHeatmapData(year) {
        const data = {};
        
        allMemories.forEach(memory => {
            const date = new Date(memory.createdAt);
            if (date.getFullYear() === year) {
                const dateKey = date.toISOString().split('T')[0];
                data[dateKey] = (data[dateKey] || 0) + 1;
            }
        });

        return data;
    }

    function renderHeatmap(data, year) {
        const heatmap = document.getElementById('heatmap');
        const months = ['Oca', 'Şub', 'Mar', 'Nis', 'May', 'Haz', 'Tem', 'Ağu', 'Eyl', 'Eki', 'Kas', 'Ara'];
        const maxCount = Math.max(...Object.values(data), 1);

        let html = '<div class="flex gap-1">';
        
        // Month labels
        html += '<div class="flex flex-col gap-1 mr-2">';
        html += '<div class="h-3"></div>'; // Spacer for day labels
        months.forEach(month => {
            html += `<div class="text-xs text-muted-foreground h-3 leading-3">${month}</div>`;
        });
        html += '</div>';

        // Generate weeks
        const startDate = new Date(year, 0, 1);
        const endDate = new Date(year, 11, 31);
        let currentDate = new Date(startDate);

        while (currentDate <= endDate) {
            html += '<div class="flex flex-col gap-1">';
            
            for (let day = 0; day < 7; day++) {
                if (currentDate > endDate) {
                    html += '<div class="w-3 h-3"></div>';
                } else {
                    const dateKey = currentDate.toISOString().split('T')[0];
                    const count = data[dateKey] || 0;
                    const intensity = count === 0 ? 0 : Math.ceil((count / maxCount) * 5);
                    const bgClass = intensity === 0 ? 'bg-muted' : `bg-primary/${intensity * 20}`;
                    
                    html += `<div class="w-3 h-3 rounded-sm ${bgClass}" title="${dateKey}: ${count} anı"></div>`;
                    currentDate.setDate(currentDate.getDate() + 1);
                }
            }
            
            html += '</div>';
        }

        html += '</div>';
        heatmap.innerHTML = html;
    }

    document.addEventListener('DOMContentLoaded', () => {
        loadStats();
    });
</script>
}
