@page
@model IndexModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-foreground mb-4 text-balance">
            Dijital Hafızanıza Hoş Geldiniz
        </h1>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto text-pretty">
            Anılarınızı, düşüncelerinizi ve özel anlarınızı güvenle saklayın. 
            Fotoğraflar, videolar, ses kayıtları, notlar ve müziklerle hayatınızı kaydedin.
        </p>
    </div>

    <!-- Memory Type Buttons -->
    <div class="max-w-4xl mx-auto mb-16">
        <h2 class="text-2xl font-semibold text-foreground mb-6 text-center">
            Yeni Anı Ekle
        </h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <!-- Photo Button -->
            <button onclick="modal.open('photoModal')" 
                    class="group relative overflow-hidden rounded-xl border-2 border-blue-500/20 bg-gradient-to-br from-blue-500/10 to-blue-600/5 p-6 text-left transition-all hover:border-blue-500/40 hover:shadow-lg hover:shadow-blue-500/20 hover:-translate-y-1">
                <div class="flex flex-col items-center gap-3">
                    <div class="rounded-full bg-blue-500 p-4 text-white group-hover:scale-110 transition-transform">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <div class="text-center">
                        <h3 class="font-semibold text-foreground mb-1">Fotoğraf</h3>
                        <p class="text-sm text-muted-foreground">Özel anları görselleştirin</p>
                    </div>
                </div>
            </button>

            <!-- Video Button -->
            <button onclick="modal.open('videoModal')" 
                    class="group relative overflow-hidden rounded-xl border-2 border-purple-500/20 bg-gradient-to-br from-purple-500/10 to-purple-600/5 p-6 text-left transition-all hover:border-purple-500/40 hover:shadow-lg hover:shadow-purple-500/20 hover:-translate-y-1">
                <div class="flex flex-col items-center gap-3">
                    <div class="rounded-full bg-purple-500 p-4 text-white group-hover:scale-110 transition-transform">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div class="text-center">
                        <h3 class="font-semibold text-foreground mb-1">Video</h3>
                        <p class="text-sm text-muted-foreground">Hareketli anılar kaydedin</p>
                    </div>
                </div>
            </button>

            <!-- Voice Button -->
            <button onclick="modal.open('voiceModal')" 
                    class="group relative overflow-hidden rounded-xl border-2 border-orange-500/20 bg-gradient-to-br from-orange-500/10 to-orange-600/5 p-6 text-left transition-all hover:border-orange-500/40 hover:shadow-lg hover:shadow-orange-500/20 hover:-translate-y-1">
                <div class="flex flex-col items-center gap-3">
                    <div class="rounded-full bg-orange-500 p-4 text-white group-hover:scale-110 transition-transform">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
                        </svg>
                    </div>
                    <div class="text-center">
                        <h3 class="font-semibold text-foreground mb-1">Ses Kaydı</h3>
                        <p class="text-sm text-muted-foreground">Sesli notlar oluşturun</p>
                    </div>
                </div>
            </button>

            <!-- Text Button -->
            <button onclick="modal.open('textModal')" 
                    class="group relative overflow-hidden rounded-xl border-2 border-green-500/20 bg-gradient-to-br from-green-500/10 to-green-600/5 p-6 text-left transition-all hover:border-green-500/40 hover:shadow-lg hover:shadow-green-500/20 hover:-translate-y-1">
                <div class="flex flex-col items-center gap-3">
                    <div class="rounded-full bg-green-500 p-4 text-white group-hover:scale-110 transition-transform">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    <div class="text-center">
                        <h3 class="font-semibold text-foreground mb-1">Metin Notu</h3>
                        <p class="text-sm text-muted-foreground">Düşüncelerinizi yazın</p>
                    </div>
                </div>
            </button>

            <!-- Song Button -->
            <button onclick="modal.open('songModal')" 
                    class="group relative overflow-hidden rounded-xl border-2 border-pink-500/20 bg-gradient-to-br from-pink-500/10 to-pink-600/5 p-6 text-left transition-all hover:border-pink-500/40 hover:shadow-lg hover:shadow-pink-500/20 hover:-translate-y-1 sm:col-span-2 lg:col-span-1">
                <div class="flex flex-col items-center gap-3">
                    <div class="rounded-full bg-pink-500 p-4 text-white group-hover:scale-110 transition-transform">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                        </svg>
                    </div>
                    <div class="text-center">
                        <h3 class="font-semibold text-foreground mb-1">Şarkı</h3>
                        <p class="text-sm text-muted-foreground">Müzik anılarınızı ekleyin</p>
                    </div>
                </div>
            </button>
        </div>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="rounded-lg border border-border bg-card p-6">
            <div class="w-12 h-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
            </div>
            <h3 class="font-semibold text-foreground mb-2">Güvenli Saklama</h3>
            <p class="text-sm text-muted-foreground">Anılarınız şifreli ve güvenli bir şekilde saklanır.</p>
        </div>

        <div class="rounded-lg border border-border bg-card p-6">
            <div class="w-12 h-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>
            <h3 class="font-semibold text-foreground mb-2">Kolay Arama</h3>
            <p class="text-sm text-muted-foreground">Anılarınızı hızlıca bulun ve filtreleyin.</p>
        </div>

        <div class="rounded-lg border border-border bg-card p-6">
            <div class="w-12 h-12 rounded-lg bg-primary/10 text-primary flex items-center justify-center mb-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
            <h3 class="font-semibold text-foreground mb-2">Zaman Çizelgesi</h3>
            <p class="text-sm text-muted-foreground">Anılarınızı kronolojik olarak görüntüleyin.</p>
        </div>
    </div>
</div>
